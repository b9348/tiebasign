# 数据库配置
# Database Configuration
DB_HOST=your-mysql-host.com
DB_USER=your-mysql-username
DB_PASSWD=your-mysql-password
DB_NAME=tiebacloud
DB_PREFIX=tc_
DB_SSL=0

# 系统配置
# System Configuration
SYSTEM_SALT=your-random-salt-string-here
ANTI_CSRF=true

# Cron任务密钥（用于验证Vercel Cron请求）
# Cron Secret (for verifying Vercel Cron requests)
CRON_SECRET=your-random-cron-secret-here

# 时区设置
# Timezone
PHP_TIMEZONE=Asia/Shanghai

# 可选：SMTP邮件配置
# Optional: SMTP Email Configuration
# MAIL_HOST=smtp.example.com
# MAIL_PORT=587
# MAIL_USER=your-email@example.com
# MAIL_PASS=your-email-password
# MAIL_FROM=noreply@example.com

